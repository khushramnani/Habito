{
  "cli": {
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "android": {
        "buildType": "apk",
        "image": "latest",
        "node": "22.11.0",
        "env": {
          "GRADLE_OPTS": "-Xmx4096m -XX:MaxMetaspaceSize=1024m"
        }
      },
      "ios": {
        "simulator": true
      }
    }
  }
}
